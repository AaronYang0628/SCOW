{
  "name": "scow",
  "private": true,
  "scripts": {
    "build": "pnpm run -r build",
    "build:libs": "pnpm --filter './libs/**' run build",
    "prepareDev": "pnpm build:libs && pnpm run -r prepareDev",
    "prune": "pnpm clean --yes && pnpm bootstrap --ci -- --production",
    "devenv": "docker compose -f docker-compose.dev.yml up -d",
    "devenv:stop": "docker compose -f docker-compose.dev.yml down",
    "test": "pnpm run -r test",
    "test:ci": "pnpm run -r test:ci",
    "prepare": "husky install",
    "lint": "eslint --cache '**/*.ts' '**/*.tsx'"
  },
  "devDependencies": {
    "@ddadaal/eslint-config": "^1.3.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.30",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.14.0",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "pino-pretty": "^7.6.1",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6",
    "pkg": "^5.6.0",
    "nodemon": "^2.0.16",
    "husky": "^8.0.0"
  },
  "volta": {
    "node": "16.15.0"
  },
  "dependencies": {}
}
